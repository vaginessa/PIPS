<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wjholden.nmap"
    android:versionCode="47"
    android:versionName="0.9.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:allowBackup="false">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="PipsListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="PipsViewResultActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="PipsOptions" android:label="@string/OptionsDesc"></activity>
        <activity android:name="PingActivity" android:label="@string/ping">
            <intent-filter>
                <action android:name="com.wjholden.nmap.PING"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>   
        </activity>
    </application>

</manifest>